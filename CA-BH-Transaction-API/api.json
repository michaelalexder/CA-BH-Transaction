{
  "openapi": "3.0.2",
  "info": {
    "title": "Transaction service API",
    "description": "Transaction service",
    "version": "1.0.0"
  },
  "paths": {
    "/api/v1/transaction/create": {
      "post": {
        "summary": "Create transaction",
        "tags": [
          "transactions"
        ],
        "requestBody": {
          "description": "Internal Error",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/createTransactionRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ok"
          },
          "500": {
            "description": "Internal Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorView"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorView"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/transaction/{customer}": {
      "get": {
        "summary": "All transactions for customer",
        "tags": [
          "transactions"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "customer",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid",
              "nullable": false
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/transactionItem"
                }
              }
            }
          },
          "500": {
            "description": "Internal Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorView"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/errorView"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "createTransactionRequest": {
        "type": "object",
        "required": [
          "account",
          "customer",
          "amount"
        ],
        "properties": {
          "account": {
            "type": "string",
            "format": "uuid"
          },
          "customer": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number"
          }
        }
      },
      "errorView": {
        "type": "object",
        "required": [
          "message",
          "details"
        ],
        "properties": {
          "message": {
            "type": "string"
          },
          "details": {
            "type": "string"
          }
        }
      },
      "transactionItem": {
        "type": "object",
        "required": [
          "customer",
          "account",
          "amount",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "customer": {
            "type": "string",
            "format": "uuid"
          },
          "account": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    }
  }
}
